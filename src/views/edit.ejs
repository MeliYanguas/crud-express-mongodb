 <!-- FORM -->
 <div class="caja-form">
    <form action="/edit/<%= task._id %>" method="POST">
        <legend>
            Actualizar tarea
        </legend>
        <div class="form-group">
            <input type="text" 
            name="title" 
            id="title" 
            class="form-control" 
            autofocus placeholder="ej: Pasear a Firulais" 
            value="<%= task.title%>">
        </div>

        <div class="form-group mt-2">
            <textarea 
            name="description" 
            id="description" 
            cols="50" 
            class="form-control"><%= task.description%></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2 form-control ">Enviar</button>
    </form>
</div>
